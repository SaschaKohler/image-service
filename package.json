{
  "name": "html-to-image-service",
  "version": "1.0.0",
  "description": "HTML to Image Service with Templates",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "test": "jest --detectOpenHandles --forceExit",
    "test:image": "jest imageGenerator.test.js --detectOpenHandles --forceExit",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint src/",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "check:all": "npm run lint && npm run test",
    "update:deps": "npm update",
    "update:major": "npx npm-check-updates -u && npm install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.4.1",
    "handlebars": "^4.7.7",
    "helmet": "^8.0.0",
    "node-html-to-image": "^5.0.0",
    "puppeteer": "^23.10.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.17.0",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
